<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingBeginnenActivity">

    <LinearLayout
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/VorlageBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/graphView"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/buttonshape"
            android:minHeight="70dp"
            android:text="Training aus Vorlage entnehmen"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/NeuesTrainingBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/graphView"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/buttonshape"
            android:minHeight="70dp"
            android:text="Neues Training erstellen"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/AktuellesTrainingBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/graphView"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/buttonshape"
            android:minHeight="70dp"
            android:text="Akutelles Training"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>