<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".TrainingBeginnenActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_back_trainingBeginnen"
        android:layout_width="36dp"
        android:layout_height="39dp"
        android:layout_gravity="top|right"
        android:layout_margin="15dp"
        android:backgroundTint="@color/main_color"
        android:backgroundTintMode="add"
        app:borderWidth="0dp"
        android:baselineAligned="false"
        android:foreground="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:paddingTop="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/VorlageBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/graphView"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/buttonshape"
            android:minHeight="70dp"
            android:text="Training aus Vorlage entnehmen"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/NeuesTrainingBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/graphView"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/buttonshape"
            android:minHeight="70dp"
            android:text="Neues Training erstellen"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/AktuellesTrainingBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/graphView"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/buttonshape"
            android:minHeight="70dp"
            android:text="Akutelles Training"
            android:textColor="@color/white" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>