<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticActivity"
    android:background="@color/grey">

    <Spinner
        android:id="@+id/spinner_statistik_übung"
        android:layout_width="179dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@+id/button_statistik_anzeigen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_date_min"
        android:layout_width="180dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Von"
        android:minHeight="48dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textColorHint="@color/ltgrey"
        app:layout_constraintBottom_toTopOf="@+id/graphViewStatistik"
        app:layout_constraintEnd_toStartOf="@+id/text_date_max"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_statistik_übung" />

    <TextView
        android:id="@+id/text_date_max"
        android:layout_width="199dp"
        android:layout_height="39dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"
        android:ems="10"
        android:hint="Bis"
        android:textColorHint="@color/ltgrey"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/graphViewStatistik"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphViewStatistik"
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_statistik_anzeigen"
        android:layout_width="193dp"
        android:layout_height="41dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/buttonshape"
        android:text="Anzeigen"
        app:layout_constraintBottom_toTopOf="@+id/text_date_max"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.391" />
</androidx.constraintlayout.widget.ConstraintLayout>